


<!-- item loop -->
{.section items}
<h1 style="text-align: center;">{collection.title} egg</h1>
{.end}
{.repeated section items}

<div class="flex-center-center">

    <div></div>
    <div class="exhibition-details hover" onclick="window.open('{fullUrl}', '_self')">
        <h6 style="margin-left: 20px;">{structuredContent.startDate|date %B %d} - {structuredContent.endDate|date %B %d, %Y} </h6>
        <h3><img src="../assets/motif1.svg" style="height: 24px" />&nbsp;{title}</h3>
    </div>
</div>

 

{.or}

  <!-- no items means no blog posts -->
  <p><em>No blog posts yet.</em></p>

{.end}

<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}


<script>
function getNextFourMonths() {
  var currentDate = new Date();
  var currentMonth = currentDate.getMonth(); // Get the current month (0-11)

  var monthsList = []; // Array to store the next four months

  for (var i = 0; i < 4; i++) {
    // Calculate the month for each iteration
    var nextMonth = (currentMonth + i + 1) % 12; // Using modulo 12 to wrap around to January after December
    var nextMonthName = new Date(0, nextMonth).toLocaleDateString('en-US', { month: 'long' }); // Get the month name

    monthsList.push(nextMonthName); // Add the month name to the list
  }

  return monthsList;
}

// Call the function to get the list of next four months
var nextFourMonths = getNextFourMonths();
console.log(nextFourMonths);

</script>