<script>
var artistList = document.getElementsByClassName('press-item')
function sizeArtistGrid(){
  var target = document.getElementById('pressList')
  var divWidth = target.offsetWidth;
  console.log(divWidth)
  if (divWidth > 800){
  var columnHeight =  (artistList.length * 500) / 4;
   $('.press-item').css("width", "23%");
   $('#pressList').css("max-height", columnHeight);

  } else if (divWidth < 800 && divWidth > 650) {
  var columnHeight =  (artistList.length * 500) / 3;
  $('.press-item').css("width", "31%");
  $('#pressList').css("max-height", columnHeight);
  
  } else if (divWidth < 650) {
    var columnHeight =  (artistList.length * 500) / 2 ;
    $('.press-item').css("width", "48%");
    
    $('#pressList').css("max-height", columnHeight);
  } 
}

window.addEventListener('resize', sizeArtistGrid)

</script>

<div id="pressList">
<!-- item loop -->
{.repeated section items}
    <div class="press-item"  onclick="window.open('{fullUrl}')">
      
      
      
        
        <img src="{assetUrl}" style="width: 90%;"/>
      
      <div style="padding: 5%">
      <img src="../assets/spear.svg" style="width: calc(60%);" alt="decorative spear" />
      <h6>{publishOn|date %b %d, %Y}</h6>
      <p ><i>{title}</i></p>
      </div>
    </div>
    {.end}
<script>sizeArtistGrid()</script>
</div>


<!-- pagination -->
{.if pagination}
  <nav class="blog-list-pagination">

    <!-- newer page -->
    {.if pagination.prevPage}
      <a href="{pagination.prevPageUrl}">Newer</a>
    {.or}
      <a class="disabled">Newer</a>
    {.end}

    <!-- older page -->
    {.if pagination.nextPage}
      <a href="{pagination.nextPageUrl}">Older</a>
    {.or}
      <a class="disabled">Older</a>
    {.end}

  </nav>
{.end}


