
<div style=" width: 100%;">
{.section item}

    <div id="post-{id}" data-item-id="{id}" class="flex-start-start flex-column">
        <div class="flex-start-start exhibition-details" style="width: 100%;">
            <div>
                <h6 style="color: black;">{structuredContent.startDate|date %B %d} - {structuredContent.endDate|date %B %d, %Y} </h6>
                <img src="{assetUrl}" style="max-width: 400px"/>
            </div>
            <div class="exhibition-details-body">
                {.if starred}<p><span class="pill">On View</span></p>{.end}
                    <p>{excerpt}</p>
                    {.section location}
                    {.section addressTitle}
                        {addressTitle}
                        {addressLine1}
                        {addressLine2}
                    {.end}
                {.end}
            </div>
        </div>
        
        <div style="padding: 20px 0px">{body}</div>
    </div>
{.end}
</div>


