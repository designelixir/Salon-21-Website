<!doctype html>
<html>
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
		{squarespace-headers}
	</head>
	<squarespace:navigation navigationId="siteNav" template="site-navigation" />
	<body class="flex-start-start ">
		{@|apply header.block}
		<div id="{squarespace.page-id}" class="{squarespace.page-classes} content-container" >
			<header class="site-header">
				<div>
					<div class="flex-center-center flex-column">
						{.if collection.mainImage}
						
              <img src="{collection.mainImage.assetUrl}" alt="header icon" style="max-height: 250px; max-width: 250px;"/>
            
						{.end}
					</div>
					<h1 class="hover" onclick="window.open('{collection.fullUrl}','_self')" id="page-title-h1">{collection.title}{.if item.title}/<span class="red-text">{item.title}{.end}</h1>
				</div>
			</header>
			<div class="flex-center-center">
				<main role="main" data-content-field="main-content" class="flex-center-center flex-column ">
					{squarespace.main-content}
				</main>
			</div>
      <div id="startTheConvo">
        {@|apply startTheConvo.block}
      </div>
			{@|apply footer.block}
			<squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
			{squarespace-footers}
		</div>
	</body>
</html>
